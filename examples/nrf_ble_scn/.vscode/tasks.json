{
    "version": "2.0.0",
    "inputs": [
        {
            "type": "pickString",
            "id": "target",
            "description": "Select Target",
            "options": [
                "pca10040",
                "pca10056"
            ],
            "default": "pca10040"
        },
        {
            "type": "pickString",
            "id": "softdevice",
            "description": "Select Softdevice",
            "options": [
                "s132",
                "s140",
            ],
            "default": "s132"
        }
    ],
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make build TARGET=${input:target} SD=${input:softdevice}",
            "problemMatcher": [
                {
                    "owner": "armgcc",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}/pca10056/s140"
                    ],
                    "pattern": {
                        "regexp": "^\\.\\.(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ]
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "make flash TARGET=${input:target} SD=${input:softdevice}",
            "problemMatcher": [
                {
                    "owner": "armgcc",
                    "fileLocation": [
                        "relative",
                        "${workspaceFolder}/pca10056/s140"
                    ],
                    "pattern": {
                        "regexp": "^\\.\\.(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                }
            ]
        },
        {
            "label": "Flash Softdevice",
            "type": "shell",
            "command": "make flash_softdevice TARGET=${input:target} SD=${input:softdevice}",
            "problemMatcher": []
        },
        {
            "label": "Erase",
            "type": "shell",
            "command": "make erase",
            "problemMatcher": []
        },
        {
            "label": "Recover",
            "type": "shell",
            "command": "make recover",
            "problemMatcher": []
        }
    ]
}